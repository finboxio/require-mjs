  "keywords": [
    "import",
    "ecmascript",
    "module",
    "node_path",
    "require",
    "mjs"
  ],
  "author": "finboxio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/finboxio/require-mjs/issues"
  },
  "homepage": "https://github.com/finboxio/require-mjs#readme",
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.17.1",
    "eslint-plugin-json": "1.4.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
